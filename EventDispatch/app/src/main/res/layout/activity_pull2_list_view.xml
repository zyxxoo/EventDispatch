<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pull2_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.totoro.Pull2ListViewActivity">
    <com.totoro.view.PullZoomListView
        android:id="@+id/pullzoomlistview"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/totoro"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_pullzoom_top" />

        <ListView
            android:id="@+id/listview"
            android:layout_marginTop="@dimen/default_pullzoom_top"
            android:background="#003300"
            android:layout_width="match_parent"
            android:layout_height="2000dp"/>

    </com.totoro.view.PullZoomListView>

</RelativeLayout>
